<div class="login container-fluid mx-auto w-75 w-md-100">
    <h3>Login</h3>
    
    <form class="login-form">
{{!-- Login form --}}
      <div class="form-group">
        <label for="loginEmail">Email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="loginPassword">Password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button id="loginBtn" class="btn" type="submit">login</button>
      </div>
    </form>
    <br>
      <hr>
{{!-- Sign up form --}}
    <h3>Sign Up</h3>
    <form class="signup-form">
        <div class="form-group">
            <label for="signupEmail">Email address</label>
            <input type="email" class="form-input" id="signupEmail">
            <small id="emailHelp" class="form-text text-muted">Your email will never be shared!</small>
        </div>
        <div class="form-group">
            <label for="signupUsername">Username</label>
            <input type="text" class="form-input" id="signupUsername">
        </div>
        <div class="form-group">
            <label for="signupPassword">Password</label>
            <input type="password" class="form-input" id="signupPassword">
        </div>
        <div class="form-group">
            <label for="confirmPassword">Confirm Password</label>
            <input type="password" class="form-input" id="confirmPassword">
        </div>
        <button id="signupBtn" class="btn">Create Account</button>
    </form>
        <br>
        <br>
        <br>
  
  <script src="/js/login.js"></script>

</div>