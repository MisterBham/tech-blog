<div class="container">
	<div class="row">
		<div class="col-md-10 mx-auto text-left">
			<form class="editChirpForm">
				<div class="mt-2 mb-3">
					<label class="form-label">Title</label>
					<input class="form-control" id="chirpTitle" maxlength="50" value="{{chirp.title}}">
				</div>

				<div class="mb-3">
					<label class="form-label">Contents</label>
					<textarea class="form-control" id="chirpContents" rows="10">{{chirp.contents}}</textarea>
				</div>

                <div class="text-center">
                    <button type="submit" class="text-center mt-3 btn btn-lg btn-block">Submit</button>
                </div>

                <div class="text-center">
                    <button type="delete" id="deleteBtn" class="text-center mt-3 btn btn-lg btn-block">Delete</button>
                </div>

			</form>
		</div>
	</div>
</div>
